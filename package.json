{
  "name": "aka-service",
  "version": "2.1.3",
  "description": "AKA-URL Shortener Service - A static web app for URL redirection",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,html,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,html,css,json}\"",
    "type-check": "tsc --noEmit",
    "version:patch": "npm version patch && npm run changelog",
    "version:minor": "npm version minor && npm run changelog",
    "version:major": "npm version major && npm run changelog",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "predeploy": "npm run build",
    "deploy": "npm run predeploy && azd up",
    "deploy:provision": "azd provision",
    "deploy:only": "azd deploy"
  },
  "dependencies": {
    "@kern-ux-annex/webc": "2.20.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "5.1.0",
    "helmet": "8.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "5.0.3",
    "@types/morgan": "^1.9.9",
    "@types/node": "24.0.13",
    "@typescript-eslint/eslint-plugin": "8.37.0",
    "@typescript-eslint/parser": "8.37.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "auto-changelog": "^2.4.0",
    "eslint": "9.31.0",
    "jsdom": "26.1.0",
    "prettier": "^3.1.0",
    "terser": "^5.43.1",
    "typescript": "5.8.3",
    "vite": "7.0.4",
    "vitest": "3.2.4"
  },
  "keywords": [
    "url-shortener",
    "redirect-service",
    "typescript",
    "vite",
    "azure-static-web-apps"
  ],
  "author": "AKA Service Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AxelWol/aka-service.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
